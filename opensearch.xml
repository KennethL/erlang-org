<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
	xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <Description>Search Erlang website</Description>
  <SearchForm>{{ '/' | absolute_url }}</SearchForm>
  <moz:SearchForm>{{  '/' | absolute_url }}</moz:SearchForm>
  <InputEncoding>UTF-8</InputEncoding>
  <Language>en</Language>

  <ShortName>erlang.org</ShortName>
  <Url rel="self" type="application/opensearchdescription+xml" href="{{ '/opensearch.xml' | absolute_url }}" />
  <Url method="get" type="text/html"
      template="https://duckduckgo.com/?q=site%3A{{ '/' | absolute_url | uri_escape }}+{searchTerms}" />
  <Image width="16" height="16">{{ '/favicon.ico' | absolute_url }}</Image>
</OpenSearchDescription>